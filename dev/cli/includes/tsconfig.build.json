{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../../lib",

    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": [],

    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es5", "ES2020", "dom"]
  },
  "include": ["../../../../src/**/*.ts"],
  "exclude": ["../../../../node_modules", "../../../../lib"]
}
