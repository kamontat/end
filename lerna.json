{
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    },
    "publish": {
      "graphType": "all",
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {}
  },
  "packages": [
    "packages/typings/*",
    "packages/internals/*",
    "packages/stacks/*",
    "packages/libs/*",
    "packages/cores/*",
    "packages/apps/*"
  ]
}
